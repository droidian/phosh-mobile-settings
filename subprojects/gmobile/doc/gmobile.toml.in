[library]
version = "@VERSION@"
description = "Mobile friendly helpers"
authors = "Purism SPC"
license = "LGPL-2.1-or-later"
browse_url = "https://gitlab.gnome.org/guidog/gmobile/"
repository_url = "https://gitlab.gnome.org/guidog/gmobile.git"
website_url = "https://gitlab.gnome.org/guidog/gmobile"
dependencies = [
  "GLib-2.0",
]
devhelp = true
search_index = true

[dependencies."GLib-2.0"]
name = "GLib	"
description = "The base type system library"
docs_url = "https://developer.gnome.org/gib/stable"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
# The base URL for the web UI
base_url = "https://gitlab.gnome.org/guidog/gmobile/-/blob/main/"
# The format for links, using "filename" and "line" for the format
file_format = "{filename}#L{line}"

[extra]
content_files = [
  "build-howto.md",
]
